<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateSpoiler">

    <EditText
        android:id="@+id/mySpoilerTitre"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="68dp"
        android:hint="Titre :"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/textcreatespoiler"
        android:layout_width="250dp"
        android:layout_height="232dp"
        android:layout_below="@+id/mySpoilerTitre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:hint="Spoilez votre histoire !"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/mySpoilerTitre"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textcreatespoiler"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="152dp"
        android:onClick="savedata"
        android:text="save" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textcreatespoiler"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="153dp"
        android:text="send" />


</RelativeLayout>