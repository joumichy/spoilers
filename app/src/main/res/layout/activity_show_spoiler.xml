<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowSpoiler">

    <TextView
        android:id="@+id/showSpoilerTitreId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="titre null"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showSpoilerSynopsisId"
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="sysnopsis null"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/imagePersonnage"
        android:layout_width="174dp"
        android:layout_height="191dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="en savoir plus"
        android:onClick="loadPersonnage"/>

    <fragment
        android:name="e.allou.spoilers.PersonnagesFragment"
        android:id="@+id/fragmentConteneur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_personnages"

        />




</RelativeLayout>